<% layout("/layouts/bolierplate") %>


    <div class="row">
        <div class="col-8 offset-2">
            <H3> CREATE NEW LISTING </H3>


            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">TITLE</label>
                    <input type="text" name="listing[title]" class="form-control" required>
                    <div class="valid-feedback"> good title</div>
                </div>


                <div class="mb-3">
                    <label for="description" class="form-label">DESCRIPTION</label>
                    <textarea name="listing[description]" class="form-control"> </textarea>
                    <div class="invalid-feedback"> please enter short desc</div>

                </div>


                <div class="mb-3">
                    <label for="IMAGE" class="form-label">Upload Image for listing</label>
                    <input type="file" name="listing[image]" required class="form-control">
                    <div class="invalid-feedback"> please enter valid image</div>
                </div>


                <div class="mb-3">
                    <label for="price" class="form-label">PRICE</label>
                    <input type="text" name="listing[price]" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="loctaion" class="form-label">LOCATION</label>
                    <input type="text" name="listing[loctaion]" class="form-control" required>
                    <div class="invalid-feedback"> please enter location</div>
                </div>


                <div class="mb-3"> <label for="country" class="form-label">COUNTRY</label>
                    <input type="text" name="listing[country]" class="form-control" required>
                    <div class="invalid-feedback"> please enter short country</div>
                </div>

                <br><br>
                <button class="btn btn-dark btn-add"> ADD</button>
            </form>
        </div>
    </div>